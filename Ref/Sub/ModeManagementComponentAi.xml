<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../Autocoders/schema/ISF/component_schema.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>

<component name="ModeManagement" kind="active" namespace="Ref" modeler="true">

    <import_port_type>Fw/Cmd/CmdRegPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdResponsePortAi.xml</import_port_type>
    <import_port_type>Fw/Tlm/TlmPortAi.xml</import_port_type>
    <import_port_type>Fw/Time/TimePortAi.xml</import_port_type>
    <import_port_type>Ref/SubPorts/PrmGetPortAi.xml</import_port_type>
    <import_port_type>Fw/Log/LogPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdPortAi.xml</import_port_type>
    <import_port_type>Fw/Log/LogTextPortAi.xml</import_port_type>
    <import_port_type>Ref/SubPorts/PrmSetPortAi.xml</import_port_type>
    <import_dictionary><commands>
	<command kind="async" opcode="0" mnemonic="MM_UPDATE_PHASE">
		<args>
			<arg name="phase" type="U32">
			</arg>
		</args>
	</command>
</commands></import_dictionary>
    <import_dictionary><telemetry>
	<channel id="0" name="MM_PHASE" data_type="U32">
        	</channel>
</telemetry></import_dictionary>
    <import_dictionary><events>
	<event id="0" name="MM_PHASE_UPDATED" severity="ACTIVITY_HI" format_string = "Phase updated to: %d" >
            		<args>
                			<arg name="phase" type="U32">
                			</arg>          
            		</args>
        	</event>
        	<event id="1" name="MM_SAFETY_MODE_ENTERED" severity="WARNING_HI" format_string = "Warning: Enter the safety mode: %d" >
            		<args>
                			<arg name="phase" type="U32">
                			</arg>          
            		</args>
        	</event>
</events></import_dictionary>
    <import_dictionary><parameters>
	<parameter id="0" name="phase" data_type="U32" default="0" set_opcode="8" save_opcode="9">
		<comment>
		phase by MM
            		</comment>
        	</parameter>
 	<parameter id="1" name="temperature" data_type="F32" default="50.0" set_opcode="10" save_opcode="11">
		<comment>
		Termometer value by MM
            		</comment>
        	</parameter>
	<parameter id="2" name="minTemp" data_type="F32" default="50.0" set_opcode="12" save_opcode="13">
		<comment>
		Threshold min value by MM
            		</comment>
        	</parameter>

	<parameter id="3" name="maxTemp" data_type="F32" default="100.0" set_opcode="14" save_opcode="15">
		<comment>
		TThreshold max value by MM
            		</comment>
        	</parameter>
 </parameters>

</import_dictionary>
    <ports>
    

        <port name="cmdReg" data_type="Fw::CmdReg"  kind="output" role="CmdRegistration"    max_number="1">
        </port>

        <port name="cmdStatus" data_type="Fw::CmdResponse"  kind="output" role="CmdResponse"    max_number="1">
        </port>

        <port name="Tlm" data_type="Fw::Tlm"  kind="output" role="Telemetry"    max_number="1">
        </port>

        <port name="timeCaller" data_type="Fw::Time"  kind="output" role="TimeGet"    max_number="1">
        </port>

        <port name="ParamGet" data_type="PrmGet"  kind="output"    max_number="1">
        </port>

        <port name="Log" data_type="Fw::Log"  kind="output" role="LogEvent"    max_number="1">
        </port>

        <port name="cmdDisp" data_type="Fw::Cmd"  kind="input" role="Cmd"    max_number="1">
        </port>

        <port name="LogText" data_type="Fw::LogText"  kind="output" role="LogTextEvent"    max_number="1">
        </port>

        <port name="ParamSet" data_type="PrmSet"  kind="output"    max_number="1">
        </port>
    </ports>

</component>
